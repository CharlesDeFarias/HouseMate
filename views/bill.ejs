<body class="body bill full-layout">
<!-- Bill information -->
    <section class="bill amount">
      <h1><%= bill[0].name.toUpperCase() %> BILL PAGE</h1>
      <h5 class="bill property">Id:</h5>
      <p class = "bill value" id="billId"><%= bill[0]._id %></p>
      <h5 class="bill property">Amount Left:</h5>
      <p class = "bill value" id="amountLeft"><%= bill[0].amountLeft %></p>
      <h5 class="bill property">Original Amount:</h5>
      <p class = "bill value" id="amountOriginal"><%= bill[0].amountOriginal %></p>
      <h5 class="bill property">Number of people on bill:</h5>
      <p class = "bill value" id="numPeople"><%= bill[0].numPeople %></p>
      <input type="button" id="payBill" name="payBill" value="Pay Now">
      
    <section class="bill paid">
      <h3>Payments Made</h3>
      <ul>
        <% for(var i = 0; i < bill[0].peoplePaid.length; i++) { %>
        <li>
            <span><%= bill[0].peoplePaid[i] %> </span>
          </li>
          <% }%>
        </ul>
