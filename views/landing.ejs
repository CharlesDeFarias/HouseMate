<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <meta charset="utf-8">
  <title>HouseMate</title>
  <link rel="stylesheet" href="typography.css">
  <link rel="stylesheet" href="form.css">
  <link rel="stylesheet" href="landing.css">
</head>
<body class="landing">
  <main class="full-layout">
  <!-- section that explains what HouseMate is and why people should sign up -->
  <section class="half-layout">

    <section>
    <h1>HouseMate</h1>
    <p>Bill payment tracking made simple.</p>
    </section>

  </section>
  <!-- Section with log-in and sign-up forms -->
  <section class="half-layout">
    <!-- login form -->
      <form action="/login" method="post">
        <h2>Login</h2>
        <fieldset class="form-group">
          <label>Email</label>
          <input type="text" class="form-control" name="email">
        </fieldset>

        <fieldset class="form-group">
          <label>Password</label>
          <input type="password" class="form-control" name="password">
        </fieldset>
        <button type="submit" class="btn submit">Login</button>
        <p> Don't have an account? <a class="link" href="/signup">Signup here.</a></p>
      </form>
    </main>
  </section>

  <!-- create a sign-up proccess that's initiated by doing a sign-up -->
</body>
</html>
